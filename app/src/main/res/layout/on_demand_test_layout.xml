<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/margin_6"
    android:layout_marginBottom="@dimen/margin_4"
    android:background="@drawable/bg_btn_google_fb">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/testThumbnail"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_10"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/margin_6"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/testTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_12"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_toRightOf="@+id/testThumbnail"
        android:text="Biology Basics"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/testType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testTitle"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_toRightOf="@+id/testThumbnail"
        android:background="@drawable/bg_test_result_layout"
        android:paddingHorizontal="@dimen/margin_12"
        android:paddingVertical="@dimen/margin_2"
        android:text="Free"
        android:textColor="@color/white"

        />

    <TextView
        android:id="@+id/testTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testTitle"
        android:layout_marginHorizontal="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_toRightOf="@+id/testType"
        android:drawableLeft="@drawable/ic_baseline_watch_later_24"
        android:drawablePadding="@dimen/margin_6"
        android:gravity="center"
        android:text="30 mins" />

    <TextView
        android:id="@+id/testQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testTitle"
        android:layout_marginHorizontal="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_toRightOf="@+id/testTime"
        android:drawableLeft="@drawable/ic_baseline_help_24"
        android:drawablePadding="@dimen/margin_6"
        android:gravity="center"
        android:text="30 Questions" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/testType"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/text_color" />

</RelativeLayout>