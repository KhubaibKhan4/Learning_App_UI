<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_16"
    android:background="@drawable/bg_btn_google_fb"
    android:paddingBottom="@dimen/margin_4"
    android:layout_marginBottom="@dimen/margin_4"
    android:backgroundTint="#F7F9FC"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageCommentSection"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/avator"

            />

        <TextView
            android:id="@+id/nameUserInComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:layout_marginStart="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_toRightOf="@id/profileImageCommentSection"
            android:text="Himanshu Singh"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_16"
             />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_6"
        android:text="some dummy comment on video" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12">

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_8"
            android:src="@drawable/ic_baseline_thumb_up_24" />


        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/likeIcon"
            android:text="232" />


        <ImageView
            android:id="@+id/unlikeIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_toRightOf="@+id/likeCount"
            android:src="@drawable/ic_baseline_thumb_down_24" />


        <TextView
            android:id="@+id/unlikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/unlikeIcon"
            android:text="2" />


        <TextView
            android:id="@+id/textReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/unlikeCount"
            android:text="Reply"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/textViewReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_10"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:text="View Replies"
            android:textColor="@color/black" />


    </RelativeLayout>


</LinearLayout>